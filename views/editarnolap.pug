doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="/style/styles.css")
    title Seguimiento de dispositivos
    style.
      footer {
        background-color: black;
        color: white;
        text-align: center;
        padding: 10px;
        height: 50px;
        display: flex;
        justify-content: center;
        align-items: center;
        bottom: 0;
        width: 99%;
      }
      label {
        display: block;
        margin-top: 10px;
        margin-left: 30px;
      }
      input[type="text"],
      select,
      textarea,
      input[type="datetime-local"] {
        width: 85%;
        padding: 10px;
        margin-top: 5px;
        margin-right: 5 px;
        margin-bottom: 10px;
        margin-left: 30px;
        border: 1px solid #ccc;
        border-radius: 3px;
      }
      input[type="submit"] {
        background-color: #333;
        color: #fff;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
      }
      input[type="submit"]:hover {
        background-color: #555;
      }
      .tabs {
        display: flex;
        border-bottom: 1px solid #ccc;
      }
      .tab {
        flex: 1;
        text-align: center;
        padding: 10px;
        cursor: pointer;
        background-color: #eee;
      }
      .tab.active {
        background-color: #1ab192;
      }
      .tab-content {
        display: none;
      }
      .tab-content.active {
        display: block;
      }
      .container {
        border: 0; /* Sin borde visible */
        border-radius: 10px; /* Borde redondeado */
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5); /* Agrega una sombra */
        margin: 0 auto; /* Centra horizontalmente en la página */
        padding: 10px;
        margin-bottom: 30px;
        max-width: 1700px; /* Establece un ancho máximo si es necesario */
      }

      button[type="submit"] {
        margin-left: 1550px; /* Ajusta el margen derecho del botón según sea necesario */
        margin-top: 25px;
      }
  div.containergen
    body
      header
        button#back.btn-back(type='button', onclick='history.back()')
          img(src='/img/back.webp', alt='back')
